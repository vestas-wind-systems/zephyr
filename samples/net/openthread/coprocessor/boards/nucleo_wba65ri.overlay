ot_uart: &usart1 {
	dmas = <&gpdma1 0 12 STM32_DMA_PERIPH_TX>,
	       <&gpdma1 1 11 STM32_DMA_PERIPH_RX>;
	dma-names = "tx", "rx";
	fifo-enable;
	status = "okay";
	current-speed = <115200>;
	hw-flow-control;
};

&gpdma1 {
	status = "okay";
};

/ {
	chosen {
		zephyr,ot-uart = &ot_uart;
	};
};

/dts-v1/;

#include <espressif/esp32s3/esp32s3_wroom_n16r8.dtsi>
#include <zephyr/dt-bindings/adc/adc.h>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <espressif/partitions_0x0_amp_16M.dtsi>
#include "esp32s3_rlcd_4_2-pinctrl.dtsi"

/ {
	model = "ESP32-S3-RLCD-4.2 PROCPU";
	compatible = "waveshare,esp32-s3-rlcd-4.2";

	aliases {
		i2c-0 = &i2c0;
		uart-0 = &uart0;
		rtc = &rtc0;
		sw0 = &button0;
		sw1 = &button1;
		sdhc0 = &sdhc0;
		watchdog0 = &wdt0;
		dht0 = &shtc3;
	};

	chosen {
		zephyr,sram = &sram1;
		zephyr,console = &usb_serial;
		zephyr,shell-uart = &usb_serial;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
		zephyr,display = &st7306;
		zephyr,sdhc = &sdhc0;
		zephyr,bt-hci = &esp32_bt_hci;
	};

	buttons {
		compatible = "gpio-keys";

		button0: button_0 {
			gpios = <&gpio0 0 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "BOOT Button";
			zephyr,code = <INPUT_KEY_0>;
		};

		button1: button_1 {
			gpios = <&gpio0 18 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "USER Button";
			zephyr,code = <INPUT_KEY_1>;
		};
	};

	vbatt: vbatt {
		compatible = "voltage-divider";
		io-channels = <&adc0 3>;
		output-ohms = <100000>;
		full-ohms = <(200000 + 100000)>;
		skip-calibration; /* ESP32 ADC does not support calibration */
	};

	mipi_dbi {
		compatible = "zephyr,mipi-dbi-spi";
		spi-dev = <&spi2>;
		dc-gpios = <&gpio0 5 GPIO_ACTIVE_HIGH>;
		reset-gpios = <&gpio1 9 GPIO_ACTIVE_LOW>;
		write-only;
		#address-cells = <1>;
		#size-cells = <0>;

		st7306: st7306@0 {
			status = "okay";
			compatible = "sitronix,st7306";
			reg = <0>;
			mipi-max-frequency = <10000000>;
			mipi-mode = "MIPI_DBI_MODE_SPI_4WIRE";
			width = <312>;
			height = <400>;
			start-line = <0>;
			start-column = <204>;
			nvm-load = [17 02];
			gate-voltages = [11 04];
			vsh = [69 69 69 69];
			vsl = [19 19 19 19];
			vshn = [4b 4b 4b 4b];
			vsln = [19 19 19 19];
			osc-settings = <0x80>;
			framerate = <0x02>;
			multiplex-ratio = <0x64>;
			source-voltage = <0x00>;
			remap-value = <0x48>;
			panel-settings = <0x29>;
			hpm-gate-waveform = [e5 f6 05 46 77 77 77 77 76 45];
			lpm-gate-waveform = [05 46 77 77 77 77 76 45];
			inversion-on;
		};
	};
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&i2c0 {
	status = "okay";
	clock-frequency = <I2C_BITRATE_STANDARD>;
	pinctrl-0 = <&i2c0_default>;
	pinctrl-names = "default";

	rtc0: rtc@51 {
		status = "okay";
		compatible = "nxp,pcf85063a";
		reg = <0x51>;
		int1-gpios = <&gpio0 15 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
	};

	shtc3: shtc3@70 {
		status = "okay";
		compatible = "sensirion,shtc3", "sensirion,shtcx";
		reg = <0x70>;
		measure-mode = "normal";
	};
};

&adc0 {
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;

	channel@3 {
		reg = <3>;
		zephyr,gain = "ADC_GAIN_1_4";
		zephyr,reference = "ADC_REF_INTERNAL";
		zephyr,acquisition-time = <ADC_ACQ_TIME_DEFAULT>;
		zephyr,resolution = <12>;
	};
};

&spi2 {
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;
	pinctrl-0 = <&spim2_default>;
	pinctrl-names = "default";
	cs-gpios = <&gpio1 8 GPIO_ACTIVE_LOW>;
};

&uart0 {
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&uart0_default>;
	pinctrl-names = "default";
};

&usb_serial {
	status = "okay";
};

zephyr_udc0: &usb_otg {
	status = "okay";
};

&sdhc {
	sdhc0: sdhc@0 {
		status = "okay";
		pinctrl-0 = <&sdhc0_default>;
		pinctrl-names = "default";
		max-bus-freq = <20000000>;
		bus-width = <1>;

		mmc {
			compatible = "zephyr,sdmmc-disk";
			disk-name = "SD";
			status = "okay";
		};
	};
};

&trng0 {
	status = "okay";
};

&wdt0 {
	status = "okay";
};

&esp32_bt_hci {
	status = "okay";
};

&wifi {
	status = "okay";
};
